# ==========================================
# CONFIGURATION DOCKER - API
# ==========================================
# Ce fichier sert de template pour la configuration
# Copiez ce fichier vers .env et personnalisez les valeurs
# Commande: cp env.example .env

# ==========================================
# PROJET
# ==========================================
PROJECT_NAME=project-name

# ==========================================
# SPRING
# ==========================================
SPRING_PROFILE=prod

# ==========================================
# API
# ==========================================
API_PORT=8090

# ==========================================
# URLs
# ==========================================
APP_BASE_URL=http://localhost:8090
APP_FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5174

# ==========================================
# MONGODB
# ==========================================
# Format: mongodb://username:password@host:port/database?authSource=admin
# Pour Docker: utiliser le nom du service MongoDB comme host
SPRING_DATA_MONGODB_URI=mongodb://root:qwerty87@project-name-mongodb:27017/project-name?authSource=admin
MONGO_AUTO_INDEX=true

# ==========================================
# JWT
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ==========================================
# ADMIN (Initialisation automatique)
# ==========================================
ADMIN_EMAIL=bendjibril789@gmail.com
ADMIN_PASSWORD=Root@dmin789!
ADMIN_USERNAME=azerty-78
ADMIN_FIRSTNAME=Ben
ADMIN_LASTNAME=Djibril

# ==========================================
# FILE STORAGE
# ==========================================
FILE_STORAGE_BASE_PATH=/app/uploads
FILE_STORAGE_MAX_FILE_SIZE=5242880
FILE_STORAGE_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
MULTIPART_MAX_FILE_SIZE=5MB
MULTIPART_MAX_REQUEST_SIZE=10MB

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_MONGO=INFO
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_WEB=INFO

# ==========================================
# DEVTOOLS
# ==========================================
DEVTOOLS_ENABLED=false

# ==========================================
# JAVA
# ==========================================
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# ==========================================
# DOCKER HUB (Optionnel)
# ==========================================
DOCKERHUB_USERNAME=

# ==========================================
# EMAIL / SMTP (Configuration SMTP)
# ==========================================
# ⚠️ IMPORTANT: Configurez ces variables d'environnement selon votre environnement
# 
# Mode TEST (MailHog) - Développement local :
# MAIL_HOST=localhost
# MAIL_PORT=1025
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_SMTP_AUTH=false
# MAIL_SMTP_STARTTLS=false
#
# Mode PRODUCTION (LWS email pro) :
# MAIL_HOST=smtp.lws.fr
# MAIL_PORT=587
# MAIL_USERNAME=votre-email@votre-domaine.com
# MAIL_PASSWORD=votre-mot-de-passe
# MAIL_SMTP_AUTH=true
# MAIL_SMTP_STARTTLS=true

MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=false
MAIL_SMTP_STARTTLS=false
MAIL_CONNECTION_TIMEOUT=5000
MAIL_TIMEOUT=5000
MAIL_WRITE_TIMEOUT=5000

# ==========================================
# EMAIL APPLICATION (Paramètres de l'application)
# ==========================================
# Utilisez l'adresse email professionnelle de votre domaine en production
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=KOBE Corporation
EMAIL_FRONTEND_URL=
EMAIL_VERIFICATION_CODE_EXPIRATION=15
EMAIL_PASSWORD_RESET_TOKEN_EXPIRATION=30
