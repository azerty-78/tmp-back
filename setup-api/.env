# ==========================================
# ⚠️ À MODIFIER : Nom du projet
# ==========================================
PROJECT_NAME=project-name
DOCKERHUB_USERNAME=your-username

# ==========================================
# ⚠️ À MODIFIER : Nom de domaine / URLs
# ==========================================
APP_BASE_URL=http://localhost:8090
APP_FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ==========================================
# CONFIGURATION API (valeurs par défaut - ne pas modifier)
# ==========================================
API_PORT=8090
SPRING_PROFILE=prod

# ==========================================
# ⚠️ À MODIFIER : URI MongoDB
# ==========================================
# Remplacez dans l'URI :
# - "project-name" (nom du conteneur) → votre PROJECT_NAME
# - "project-name" (nom de la base) → votre MONGO_DATABASE
SPRING_DATA_MONGODB_URI=mongodb://root:qwerty87@project-name-mongodb:27017/project-name?authSource=admin
MONGO_AUTO_INDEX=true

# ==========================================
# CONFIGURATION JWT
# ==========================================
# ⚠️ IMPORTANT: Changez ces valeurs en production !
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=86400000

# ==========================================
# CONFIGURATION ADMIN PAR DÉFAUT (Legacy)
# ==========================================
# Compte administrateur créé au démarrage de l'application
ADMIN_EMAIL=bendjibril789@gmail.com
ADMIN_PASSWORD=Root@dmin789!
ADMIN_USERNAME=azerty-78
ADMIN_FIRSTNAME=Ben
ADMIN_LASTNAME=Djibril

# ==========================================
# PLATFORM ADMIN (Super Admin Multi-Tenant)
# ==========================================
# ⚠️ IMPORTANT: Ce compte gère TOUS les tenants de la plateforme
PLATFORM_ADMIN_EMAIL=admin@kobecorporation.com
PLATFORM_ADMIN_PASSWORD=Platform@dmin789!
PLATFORM_ADMIN_USERNAME=platform-admin
PLATFORM_ADMIN_FIRSTNAME=Platform
PLATFORM_ADMIN_LASTNAME=Admin

# ==========================================
# MULTI-TENANT SAAS CONFIGURATION
# ==========================================
# Domaine principal de la plateforme
TENANT_PLATFORM_DOMAIN=kobecorporation.com

# Préfixe pour les sous-domaines (kb-saas-{slug}.kobecorporation.com)
TENANT_SUBDOMAIN_PREFIX=kb-saas-

# Header HTTP pour identifier le tenant (tests/API)
TENANT_HEADER_NAME=X-Tenant-ID

# Plan par défaut pour les nouveaux tenants (FREE, STARTER, PRO, ENTERPRISE)
TENANT_DEFAULT_PLAN=FREE

# Nombre de jours d'essai gratuit
TENANT_TRIAL_DAYS=14

# Nombre max de tenants qu'un utilisateur peut créer
TENANT_MAX_PER_USER=3

# Vérifier les DNS pour les domaines personnalisés (false en dev)
TENANT_VERIFY_DNS=false

# ==========================================
# CONFIGURATION STOCKAGE DE FICHIERS
# ==========================================
# Dossiers obligatoires: /app/uploads/users et /app/uploads/stock
FILE_STORAGE_BASE_PATH=/app/uploads
FILE_STORAGE_MAX_FILE_SIZE=10485760
FILE_STORAGE_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
MULTIPART_MAX_FILE_SIZE=10485760
MULTIPART_MAX_REQUEST_SIZE=10485760

# ==========================================
# CONFIGURATION LOGGING
# ==========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_MONGO=WARN

# ==========================================
# CONFIGURATION DÉVELOPPEMENT
# ==========================================
DEVTOOLS_ENABLED=false

# ==========================================
# CONFIGURATION JAVA
# ==========================================
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# ==========================================
# CONFIGURATION EMAIL / SMTP
# ==========================================
# Pour les tests locaux avec MailHog (setup-smtp)
MAIL_HOST=project-name-mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=false
MAIL_SMTP_STARTTLS=false
MAIL_CONNECTION_TIMEOUT=5000
MAIL_TIMEOUT=5000
MAIL_WRITE_TIMEOUT=5000

# Application Email Settings
EMAIL_FROM_ADDRESS=noreply@kobecorporation.com
EMAIL_FROM_NAME=KOBE Corporation
EMAIL_FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_CODE_EXPIRATION=10
EMAIL_PASSWORD_RESET_TOKEN_EXPIRATION=30
